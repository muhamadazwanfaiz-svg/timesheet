// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Student {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String   @default("password")
  bio       String?
  module    String?
  avatarUrl String? // Link to profile image
  credits   Int      @default(0)
  defaultDurationMinutes Int @default(60)
  
  // Onboarding & Security
  seoLevel     String?  // Beginner, Intermediate, Pro
  goals        String?  // Traffic, Career, Business
  passwordSet  Boolean  @default(false)

  transactions CreditTransaction[]
  slots     Slot[]
  invoices  Invoice[]

  @@index([email])
  @@index([credits])
}

model CreditTransaction {
  id          String   @id @default(cuid())
  studentId   String
  student     Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  amount      Int      // Positive (add) or Negative (spend)
  type        String   // "ADJUSTMENT", "SESSION_BOOKING", "SESSION_REFUND"
  description String?
  createdAt   DateTime @default(now())

  @@index([studentId])
}

model Slot {
  id        String   @id @default(cuid())
  startTime DateTime
  endTime   DateTime
  studentId String?
  student   Student? @relation(fields: [studentId], references: [id])
  
  // Status: "SCHEDULED", "COMPLETED", "CANCELED"
  status        String   @default("SCHEDULED")
  
  // Feedback
  feedbackRating Int?
  feedbackNotes  String?
  
  // New: Tutor Notes
  classNotes     String?

  @@index([startTime])
  @@index([status])
  @@index([studentId])
}

model SystemSettings {
  id            Int     @id @default(1)
  showCommunity Boolean @default(false)
  showCourses   Boolean @default(false)
  showSessions  Boolean @default(true)
  showSeoNews   Boolean @default(true)
  showRewards   Boolean @default(true)
}

model Availability {
  id        String   @id @default(cuid())
  startTime DateTime
  endTime   DateTime

  @@index([startTime])
}

model Invoice {
  id          String        @id @default(cuid())
  studentId   String?
  student     Student?      @relation(fields: [studentId], references: [id])
  number      String        @unique // e.g., INV-001
  date        DateTime      @default(now())
  dueDate     DateTime?
  status      String        @default("DRAFT") // DRAFT, PAID, SENT
  
  // Custom Recipient Details (if not a student)
  recipientName    String?
  recipientEmail   String?
  recipientAddress String?

  items       InvoiceItem[]
  notes       String?
  total       Float         @default(0)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([studentId])
}

model InvoiceItem {
  id          String   @id @default(cuid())
  invoiceId   String
  invoice     Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  description String
  quantity    Float    @default(1)
  rate        Float    @default(0)
  amount      Float    @default(0)

  @@index([invoiceId])
}
