// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Student {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String   @default("password")
  bio       String?
  module    String?
  avatarUrl String? // Link to profile image
  credits   Int      @default(0)
  defaultDurationMinutes Int @default(60)
  
  // Onboarding & Security
  seoLevel     String?  // Beginner, Intermediate, Pro
  goals        String?  // Traffic, Career, Business
  passwordSet  Boolean  @default(false)

  transactions CreditTransaction[]
  slots     Slot[]
}

model CreditTransaction {
  id          String   @id @default(cuid())
  studentId   String
  student     Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  amount      Int      // Positive (add) or Negative (spend)
  type        String   // "ADJUSTMENT", "SESSION_BOOKING", "SESSION_REFUND"
  description String?
  createdAt   DateTime @default(now())
}

model Slot {
  id        String   @id @default(cuid())
  startTime DateTime
  endTime   DateTime
  studentId String?
  student   Student? @relation(fields: [studentId], references: [id])
  
  // Status: "SCHEDULED", "COMPLETED", "CANCELED"
  status        String   @default("SCHEDULED")
  
  // Feedback
  feedbackRating Int?
  feedbackNotes  String?
  
  // New: Tutor Notes
  classNotes     String?
}

model SystemSettings {
  id            Int     @id @default(1)
  showCommunity Boolean @default(false)
  showCourses   Boolean @default(false)
  showSessions  Boolean @default(true)
}

model Availability {
  id        String   @id @default(cuid())
  startTime DateTime
  endTime   DateTime
}
